{
  "name": "codewars-tasks",
  "version": "1.0.0",
  "main": "server/index.ts",
  "scripts": {
    "start": "webpack serve --open",
    "tsc": "tsc",
    "reload": "reload",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "boilerplate",
    "frontend",
    "typescript",
    "jest"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/webpack-dev-server": "^3.11.1",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.2",
    "reload": "^2.4.0",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.0.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "app/(.*)": "<rootDir>/src/*/**"
    },
    "testMatch": [
      "<rootDir>/src/**/*.(test).{js,jsx,ts,tsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ]
  }
}